{
    "manifest_version": 3,
    "name": "Český Akcent",
    "version": "1.2",
    "description": "Озвучивает выделенный чешский текст, используя облачный синтезатор речи.",
    "permissions": [
      "contextMenus",
      "scripting",
      "offscreen"
    ],
    "host_permissions": [
      "https://texttospeech.googleapis.com/"
    ],
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }